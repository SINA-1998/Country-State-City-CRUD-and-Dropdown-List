@model Sina_CSC_Project.Models.CityDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>
<br />
<br />
<h4>ویرایش شهر‌ها</h4>
<br />
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <input asp-for="CityId" class="form-control" />
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State.StateId" class="control-label"></label>
                <input asp-for="State.StateId" class="form-control" />
                <span asp-validation-for="State.StateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State.StateName" class="control-label"></label>
                <input asp-for="State.StateName" class="form-control" />
                <span asp-validation-for="State.StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State.Country.CountryId" class="control-label"></label>
                <input asp-for="State.Country.CountryId" class="form-control" />
                <span asp-validation-for="State.Country.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State.Country.CountryName" class="control-label"></label>
                <input asp-for="State.Country.CountryName" class="form-control" />
                <span asp-validation-for="State.Country.CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="col-md-8">
    <a asp-action="Index" class="btn btn-secondary btn-block">برگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
